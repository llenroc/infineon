<UserControl x:Class="Infineon.Controls.SliderWithNumber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Infineon.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="24">
    <Grid>
        <Rectangle Name="rectHighlight" Fill="Transparent" Margin="-5"></Rectangle>
        <DockPanel>
            <TextBlock Name="tbName" Width="100" VerticalAlignment="Center">Name:</TextBlock>
            <TextBox Name="tbValue" Width="40" DockPanel.Dock="Right"></TextBox>
            <Slider Name="slValue" VerticalAlignment="Center" IsMoveToPointEnabled="True" Margin="0,0,5,0"></Slider>
        </DockPanel>
    </Grid>
</UserControl>
